each inst in instruments
    tr
        td
            a(class="d-flex justify-content-center" href="#")
                img(class="img-fluid" src=`img/${inst.img}` alt="img")
        td(id="container-fill-height")
            div(class="centerElement")
                h2=inst.type
            if inst.subtype
                hr(class="m-4")
                div(class="centerElement")
                    h2=inst.subtype
        td(id="container-fill-height")
            div
                a(href="#" class="item-upper-right me-3 mt-2")="View"
            div
                h2="$" + inst.price
