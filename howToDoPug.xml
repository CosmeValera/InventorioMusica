each inst in instruments
    tr
        td
            div(class="centerElement")
                h2=inst.type
            if inst.subtype
                hr(class="m-4")
                div(class="centerElement")
                    h2=inst.subtype
        td
            a(class="d-flex justify-content-center" href="#")
                img(class="img-fluid" src=`img/${inst.img}` alt="img")
        td
            div(class="d-flex justify-content-end")
                a(href="#")="View"
            br
            br
            div(id="container" class="col")
                h2="$" + instr.price


