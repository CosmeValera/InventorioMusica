div(class="modal-header" id= "container-fill-height")
    h2(class="my-0")="UPDATE:"
    span(class="close item-upper-right px-4 py-3")="Ã—"
div(class = "modal-body")
    p(class="d-none modal-invisible-id")
        =instrument._id
    p(class="d-flex justify-content-center my-0")
        strong(class="me-2")="Type:"
        =instrument.type
    p(class="d-flex justify-content-center my-0")
        strong(class="me-2")="Name:"
        =instrument.name
    if instrument.subtype
        p(class="d-flex justify-content-center my-0")
            strong(class="me-2")="Subtype:"
            =instrument.subtype
    p(class="d-flex justify-content-center my-0")
        strong(class="me-2")="Price:"
        =instrument.price 
    p(class="d-flex justify-content-center my-0")
        strong(class="me-2")="Sonority:"
        =instrument.sonority
    p(class="d-flex justify-content-center mt-0 mx-5")
        strong(class="me-2")="Summary:"
        =instrument.summary
    a(class="d-flex justify-content-center")
        img(class="img-fluid" src=`img/${instrument.name}.png` alt="img")
    div(class="d-flex justify-content-center")
        a(class="link-as-button-light-red delete-button mt-3" href="#")="Cancel"
    div(class="d-flex justify-content-center")
        a(class="link-as-button-light-red delete-button mt-3" href="#")="Accept"